{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DynamoDBTableAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-2:<ACCOUNT NO>:table/chat-table",
        "arn:aws:dynamodb:us-east-2:<ACCOUNT NO>:table/chat-table/index/*",
        "arn:aws:dynamodb:us-east-2:<ACCOUNT NO>:table/trace-table",
        "arn:aws:dynamodb:us-east-2:<ACCOUNT NO>:table/trace-table/index/*",
        "arn:aws:dynamodb:us-east-2:<ACCOUNT NO>:table/chat-metadata-table",
        "arn:aws:dynamodb:us-east-2:<ACCOUNT NO>:table/chat-metadata-table/index/*"
      ]
    }
  ]
}